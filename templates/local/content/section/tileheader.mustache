{{!
    @template format_mawang/local/content/section/header

    Displays a course section header.

    Example context (json):
    {
        "id": 123,
        "name": "Section title",
        "title": "<a href=\"http://moodle/course/view.php?id=5#section-0\">Section title</a>",
        "url": "#",
        "headerdisplaymultipage": true,
        "hidetitle": false,
        "editing": 0
    }
}}

<div class="d-flex align-items-end w-100">
    {{^hidetitle}}
        <div class="d-flex align-items-start w-100">
            <div
                id="tcollapssesection{{num}}"
                class="tiletext {{#contentcollapsed}} collapsed {{/contentcollapsed}}">
                <h3 class="sectionname sectionid-{{id}}-title"
                    id="coursecontentsection{{num}}" data-for="section_title" data-id="{{id}}" data-number="{{num}}">
                    {{{title}}}
                </h3>
            </div>
        </div>
    {{/hidetitle}}
</div>
