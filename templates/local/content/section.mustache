{{!
    @template format_mawang/local/content/section

    Displays a course section.

    Note: This template is a wrapper around the section/content template to allow course formats and theme designers to
    modify parts of the wrapper without having to copy/paste the entire template.

    Example context (json):
    {
        "num": 3,
        "id": 35,
        "controlmenu": "[tools menu]",
        "header": {
            "name": "Section title",
            "title": "<a href=\"http://moodle/course/view.php?id=5#section-0\">Section title</a>",
            "url": "#",
            "ishidden": true
        },
        "cmlist": {
            "cms": [
                {
                    "cmitem": {
                        "cmformat": {
                            "cmname": {"displayvalue": "<a class=\"aalink\" href=\"#\"><span class=\"instancename\">Forum example</span></a>"},
                            "hasname": "true"
                        },
                        "cmid": 3,
                        "module": "forum",
                        "anchor": "activity-3",
                        "extraclasses": "newmessages"
                    }
                },
                {
                    "cmitem": {
                        "cmformat": {
                            "cmname": {"displayvalue": "<a class=\"aalink\" href=\"#\"><span class=\"instancename\">Another forum</span></a>"},
                            "hasname": "true"
                        },
                        "cmid": 4,
                        "anchor": "activity-4",
                        "module": "assign",
                        "extraclasses": ""
                    }
                }
            ],
            "hascms": true
        },
        "ishidden": false,
        "iscurrent": true,
        "currentlink": "<span class=\"accesshide\">This topic</span>",
        "availability": {
            "info": "<span class=\"badge badge-info\">Hidden from students</span>",
            "hasavailability": true
        },
        "summary": {
            "summarytext": "Summary text!"
        },
        "controlmenu": {
            "menu": "<a href=\"#\" class=\"d-inline-block dropdown-toggle icon-no-margin\">Edit<b class=\"caret\"></b></a>",
            "hasmenu": true
        },
        "cmcontrols": "[Add an activity or resource]",
        "iscoursedisplaymultipage": true,
        "sectionreturnid": 0,
        "contentcollapsed": false,
        "insertafter": true,
        "numsections": 42,
        "sitehome": false,
        "highlightedlabel" : "Highlighted",
        "testingonly-make-mustache-lint-happy": 1
    }
}}
{{#testingonly-make-mustache-lint-happy}}
<ul>
{{/testingonly-make-mustache-lint-happy}}

<li id="section-{{num}}"
    class="section course-section main {{#onlysummary}} section-summary {{/onlysummary}} clearfix
            {{#ishidden}} hidden {{/ishidden}} {{#iscurrent}} current {{/iscurrent}}
            {{#isstealth}} orphaned {{/isstealth}} {{#editing}} editing {{/editing}}"
    data-sectionid="{{num}}"
    data-sectionreturnid="{{sectionreturnid}}"
    data-for="section"
    data-id="{{id}}"
    data-number="{{num}}"
>
    <div class="course-section-header-edit d-flex"
        data-for="section_title"
        data-id="{{id}}"
        data-number="{{num}}"
    >
        {{^singlesection}}
            <div class="card sectioncard">
                {{#sectionimage}}
                    <div class="course-section-card-header {{^restrictionlock}}tiletoggle{{/restrictionlock}}">
                        <div class="section-image-background" style='background-image: url("{{sectionimage}}");' aria-hidden="true">
                        </div>
                        {{#editing}}
                            <button class="btn btn-icon icon-no-margin section-edit-button" data-action="section-edit-form" data-sectionid="{{id}}" data-sectionnum="{{num}}" data-sectionname="{{name}}" data-courseid="{{courseid}}">
                                {{#pix}} e/insert_edit_image, core {{/pix}}
                            </button>
                        {{/editing}}
                    </div>
                {{/sectionimage}}
                <div class="sectioncardbody">
                    {{#header}}
                        {{$ format_mawang/local/content/section/tileheader }}
                            {{> format_mawang/local/content/section/tileheader }}
                        {{/ format_mawang/local/content/section/tileheader }}
                    {{/header}}
                    {{#cmsummary}}
                        {{$ format_mawang/local/content/section/cmsummary }}
                            {{> format_mawang/local/content/section/cmsummary }}
                        {{/ format_mawang/local/content/section/cmsummary }}
                    {{/cmsummary}}
                    {{#summary}}
                    {{$ core_courseformat/local/content/section/summary }}
                        {{> core_courseformat/local/content/section/summary }}
                    {{/ core_courseformat/local/content/section/summary }}
                    {{/summary}}
                    <div class="grower"></div>
                    <div class="d-flex justify-content-between align-items-center">
                        {{#cmsummary.totalduration}}
                            <div class="icon-no-margin totalduration ma-small">
                                {{#pix}}time, format_mawang{{/pix}} {{{.}}}
                            </div>
                        {{/cmsummary.totalduration}}
                        {{#lastvisited}}
                            <span class="recentlyviewed ml-auto">{{#str}}recentlyviewed, format_mawang{{/str}}</span>
                        {{/lastvisited}}
                    </div>
                </div>
            </div>
        {{/singlesection}}
        {{$ format_mawang/local/content/section/content }}
            {{> format_mawang/local/content/section/content }}
       {{/ format_mawang/local/content/section/content }}
    </div>

    {{#showaddsection}}
        {{> format_mawang/local/content/addsection}}
    {{/showaddsection}}
</li>

{{#testingonly-make-mustache-lint-happy}}
</ul>
{{/testingonly-make-mustache-lint-happy}}
